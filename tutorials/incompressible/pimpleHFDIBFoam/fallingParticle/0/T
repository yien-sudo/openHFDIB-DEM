FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 300;

boundaryField
{
    xMin
    {
        type            zeroGradient;
    }

    xMax
    {
        type            zeroGradient;
    }

    yMin
    {
        type            zeroGradient;
    }

    yMax
    {
        type            zeroGradient;
    }

    bottom
    {
        type            cyclic;
    }

    top
    {
        type            cyclic;
    }
}


